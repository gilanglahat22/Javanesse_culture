<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardMateriActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/background_quiz">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        android:src="@drawable/dashboard_shape"
        android:contentDescription="Dashboard Yellow Shape" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Quiz"
            android:textColor="@color/white"
            android:fontFamily="@font/proxima_nova_regular"
            android:textSize="24sp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="35dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Hello,"
            android:textColor="@color/white"
            android:fontFamily="@font/proxima_nova_regular"
            android:textSize="20sp"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="35dp"/>

        <TextView
            android:id="@+id/greet_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/white"
            android:fontFamily="@font/proxima_nova_bold"
            android:textSize="20sp"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="90dp"/>

        <ImageView
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:src="@drawable/male_profile"
            android:layout_marginRight="35dp"
            android:layout_marginTop="35dp"
            android:layout_alignParentRight="true"
            android:contentDescription="Dashboard Yellow Shape" />

    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="142dp"
        android:layout_marginBottom="100dp"
        android:rowCount="5"
        android:columnCount="1"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:text="Mari Belajar"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/yellow"
                android:fontFamily="@font/brandon_grotesque_bold_webfont"
                android:textSize="30sp" />

            <TextView
                android:text="Silahkan pilih materi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/yellow"
                android:fontFamily="@font/proxima_nova_regular"
                android:textSize="20sp" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/general_category"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/dark_grey"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_rumah_adat"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="left"
                    android:contentDescription="Dashboard Yellow Shape" />

                <TextView
                    android:id="@+id/general_category_name"
                    android:text="Rumah Adat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="-32dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:textSize="17sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/history_category"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/light_blue"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/musik_dan_tarian"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="left"
                    android:contentDescription="Dashboard Yellow Shape" />

                <TextView
                    android:id="@+id/history_category_name"
                    android:text="Musik dan tarian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="-32dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:textSize="17sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/movies_category"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#a020f0"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_suku"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="left"
                    android:contentDescription="Dashboard Yellow Shape" />

                <TextView
                    android:id="@+id/movies_category_name"
                    android:text="Suku dan Senjata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="-32dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:textSize="17sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/comics_category"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/red"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_makanan_khas_daerah"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="left"
                    android:contentDescription="Dashboard Yellow Shape" />

                <TextView
                    android:id="@+id/comics_category_name"
                    android:text="Pakaian dan Makanan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="-32dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:textSize="17sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/yellow"
        app:itemTextColor="@drawable/nav_color"
        app:itemIconTint="@drawable/nav_color"
        app:menu="@menu/bottom_navbar">
    </com.google.android.material.bottomnavigation.BottomNavigationView>
</androidx.constraintlayout.widget.ConstraintLayout>