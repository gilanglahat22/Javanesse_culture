<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GeneralQuizActivity"
    android:fillViewport="true"
    android:background="@color/yellow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="40dp"
        android:gravity="top|center">

        <LinearLayout
            android:id="@+id/comics_progress_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/comics_progressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="8"
                android:minHeight="50dp"
                android:progress="1"
                android:indeterminate="false"
                android:progressBackgroundTint="@color/white"
                android:progressTint="@color/light_blue"
                android:layout_marginTop="-20dp"
                />

            <TextView
                android:id="@+id/tv_comics_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="15dp"
                android:fontFamily="@font/proxima_nova_regular"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:layout_marginTop="-20dp"
                tools:text="0/8"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_comics_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/proxima_nova_regular"
            android:textSize="22sp"
            tools:text="What is Captain Americaâ€™s shield made of?"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/tv_comics_option_one"
                android:background="@drawable/option_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="20dp"
                android:textColor="@color/dark_grey"
                android:fontFamily="@font/proxima_nova_bold"
                android:textSize="20sp"
                android:clickable="true"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/option_arrow"
                android:layout_marginTop="-42dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="right"
                android:contentDescription="Option Arrow" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tv_comics_option_two"
                android:background="@drawable/option_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="20dp"
                android:textColor="@color/dark_grey"
                android:fontFamily="@font/proxima_nova_bold"
                android:textSize="20sp"
                android:clickable="true"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/option_arrow"
                android:layout_marginTop="-42dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="right"
                android:contentDescription="Option Arrow" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tv_comics_option_three"
                android:background="@drawable/option_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="20dp"
                android:textColor="@color/dark_grey"
                android:fontFamily="@font/proxima_nova_bold"
                android:textSize="20sp"
                android:clickable="true"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/option_arrow"
                android:layout_marginTop="-42dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="right"
                android:contentDescription="Option Arrow" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_are_you_correct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/light_blue"
            android:padding="10dp"
            android:textSize="16dp"
            android:fontFamily="@font/proxima_nova_semibold"
            android:enabled="false"/>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="2"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/comics_category_bottom_image"
                android:src="@drawable/comic_category_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="Option Arrow" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>