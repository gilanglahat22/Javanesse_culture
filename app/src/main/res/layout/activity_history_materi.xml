<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoryMateriActivity"
    android:fillViewport="true"
    android:background="@drawable/materi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="40dp"
        android:gravity="top|center">

        <LinearLayout
            android:id="@+id/history_progress_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/history_progressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="8"
                android:minHeight="50dp"
                android:progress="1"
                android:indeterminate="false"
                android:progressBackgroundTint="@color/black"
                android:progressTint="@color/light_blue"
                android:layout_marginTop="-20dp"
                />

            <TextView
                android:id="@+id/tv_history_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="15dp"
                android:fontFamily="@font/proxima_nova_regular"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_marginTop="-20dp"
                tools:text="0/8"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_history_materi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/proxima_nova_regular"
            android:textSize="22sp"
            tools:text="What is Captain Americaâ€™s shield made of? asjhdauydgabsdsadsadsasdas dasdabsjhdbaasdasd asdasdhasjbdas"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/history_category_bottom_image"
                android:src="@drawable/history_category_image"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="Option Arrow" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_lanjut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/light_blue"
            android:padding="10dp"
            android:textSize="16dp"
            android:fontFamily="@font/proxima_nova_semibold"
            android:enabled="false"/>
        <Button
            android:id="@+id/btn_kembali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/light_blue"
            android:padding="10dp"
            android:textSize="16dp"
            android:fontFamily="@font/proxima_nova_semibold"
            android:enabled="false"/>


    </LinearLayout>

</ScrollView>